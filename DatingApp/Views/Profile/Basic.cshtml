@using DatingApp.Resources.Labels
@using DatingApp.Models.Extensions.HtmlExtensions
@model DatingApp.Models.User.Profile.Properties.Basic

@{
    ViewBag.Title = "Edit Your Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-lg-3">
        @{Html.RenderPartial("navigation");}
    </div>
    <div class="col-lg-9">
        <h2 class="alert-success alert">Edit Your Basic Profile</h2>
        @{Html.BeginForm("Basic", "Profile", FormMethod.Post, new { @class = "form-horizontal" }); }

        <div class="form-group">
            <label id="lblSex" class="col-lg-3 control-label">@Properties.Status@Html.ValidationMessage("status", "")</label>
            <div class="col-lg-9">
                @MvcHtmlString.Create(@DatingHtml.RadioButtonListBtstrp("status", 2, Model.Status, false))
            </div>
        </div>

        <div class="form-group">
            <label id="lblSex" class="col-lg-3 control-label">@Properties.StatusPartner@Html.ValidationMessage("statuspartner", "*")</label>
            <div class="col-lg-9">
                @MvcHtmlString.Create(@DatingHtml.RadioButtonListBtstrp("statuspartner", 2, Model.StatusPartner, false))
            </div>
        </div>

        <div class="form-group">
            <label id="lblSex" class="col-lg-3 control-label">@Properties.KidsHave@Html.ValidationMessage("kidshave", "*")</label>
            <div class="col-lg-9">
                @MvcHtmlString.Create(@DatingHtml.RadioButtonListBtstrp("kidshave", 1, Model.KidsHave, false))
            </div>
        </div>

        <div class="form-group">
            <label id="lblSex" class="col-lg-3 control-label">@Properties.KidsWant@Html.ValidationMessage("kidswant", "*")</label>
            <div class="col-lg-9">
                @MvcHtmlString.Create(@DatingHtml.RadioButtonListBtstrp("kidswant", 3, Model.KidsWant, false))
            </div>
        </div>

        <div class="form-group">
            <label id="lblSex" class="col-lg-3 control-label">@Properties.Relationship@Html.ValidationMessage("relationship", "*")</label>
            <div class="col-lg-9">
                @MvcHtmlString.Create(@DatingHtml.CheckBoxListBtstsr("relationship", 3, Model.Relationship))
            </div>
        </div>

        <div class="container"><input class="btn btn-block btn-success" type="submit" value="@Labels.Save" /></div>
        <div class="container">@Html.ValidationSummary()</div>
        @{Html.EndForm();}
</div></div>

<script>
    var d = document.getElementById("liEdit");
    d.className += " active";
    d = document.getElementById("editBasic");
    d.className += " active";
</script>  