@using System.Web.Mvc
@using DatingApp.Resources.Labels
@model DatingApp.Models.User.Profile.Properties.TellMore

@{
    ViewBag.Title = "Edit Your Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-lg-3">
        @{Html.RenderPartial("navigation");}
    </div>
    <div class="col-lg-9">
        <h2 class="alert-success alert">Edit Your Music, Film, Sports,... Preferences</h2>
        @{Html.BeginForm("TellMore", "Profile", FormMethod.Post, new { @class = "form-horizontal" }); }

        <div class="form-group">
            <label class="col-lg-3 control-label">@MvcHtmlString.Create(@Properties.Books)@Html.ValidationMessage("books", "*")</label>
            <div class="col-lg-9">
                @Html.TextArea("BooksDescriptive", Model.BooksDescriptive, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-lg-3 control-label">@MvcHtmlString.Create(@Properties.Pets)@Html.ValidationMessage("pets", "*")</label>
            <div class="col-lg-9">
                @Html.TextArea("PetsDescriptive", Model.PetsDescriptive, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-lg-3 control-label">@MvcHtmlString.Create(@Properties.Interests)@Html.ValidationMessage("interests", "*")</label>
            <div class="col-lg-9">
                @Html.TextArea("InterestsDescriptive", Model.InterestsDescriptive, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-lg-3 control-label">@MvcHtmlString.Create(@Properties.Movies)@Html.ValidationMessage("movies", "*")</label>
            <div class="col-lg-9">
                @Html.TextArea("MoviesDescriptive", Model.MoviesDescriptive, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-lg-3 control-label">@MvcHtmlString.Create(@Properties.TVProgrammes)@Html.ValidationMessage("TVProgrammes", "*")</label>
            <div class="col-lg-9">
                @Html.TextArea("TvProgrammesDescriptive", Model.TvProgrammesDescriptive, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-lg-3 control-label">@MvcHtmlString.Create(@Properties.MusicStuff)@Html.ValidationMessage("music", "*")</label>
            <div class="col-lg-9">
                @Html.TextArea("MusicDescriptive", Model.MusicDescriptive, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-lg-3 control-label">@MvcHtmlString.Create(@Properties.SportStuff)@Html.ValidationMessage("sport", "*")</label>
            <div class="col-lg-9">
                @Html.TextArea("SportDescriptive", Model.SportDescriptive, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-lg-3 control-label">@MvcHtmlString.Create(@Properties.Fashion)@Html.ValidationMessage("fashion", "*")</label>
            <div class="col-lg-9">
                @Html.TextArea("FashionDescriptive", Model.FashionDescriptive, new { @class = "form-control" })
            </div>
        </div>

        <div class="container"><input class="btn btn-block btn-success" type="submit" value="@Labels.Save" /></div>
        <div class="container">@Html.ValidationSummary()</div>
        @{Html.EndForm();}
    </div>
</div>

<script>
    var d = document.getElementById("liEdit");
    d.className += " active";
    d = document.getElementById("editTm");
    d.className += " active";
</script>

